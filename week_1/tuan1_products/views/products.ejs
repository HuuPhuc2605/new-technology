<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Product List</title>

  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f6fa;
      padding: 30px;
    }

    h2 {
      color: #2f3640;
    }

    form {
      background: #ffffff;
      padding: 15px;
      width: 300px;
      border-radius: 6px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      margin-bottom: 30px;
    }

    input {
      width: 100%;
      padding: 6px;
      margin: 5px 0 10px;
      box-sizing: border-box;
    }

    button {
      background: #4cd137;
      color: white;
      border: none;
      padding: 8px 12px;
      border-radius: 4px;
      cursor: pointer;
    }

    button:hover {
      background: #44bd32;
    }

    table {
      border-collapse: collapse;
      width: 100%;
      background: #ffffff;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    th, td {
      padding: 10px;
      text-align: center;
    }

    th {
      background: #273c75;
      color: white;
    }

    tr:nth-child(even) {
      background: #f1f2f6;
    }

    a {
      text-decoration: none;
      font-weight: bold;
    }

    a[href^="/edit"] {
      color: #0984e3;
    }

    a[href^="/delete"] {
      color: #e84118;
    }

    a:hover {
      text-decoration: underline;
    }
  </style>

</head>
<body>

<h2>Add Product</h2>
<form action="/add" method="post">
  Name: <input name="name">
  Price: <input name="price">
  Quantity: <input name="quantity">
  <button>Add</button>
</form>

<h2>Products</h2>
<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Action</th>
  </tr>

  <% products.forEach(p => { %>
    <tr>
      <td><%= p.id %></td>
      <td><%= p.name %></td>
      <td><%= p.price %></td>
      <td><%= p.quantity %></td>
      <td>
        <a href="/edit/<%= p.id %>">Edit</a> |
        <a href="/delete/<%= p.id %>"
           onclick="return confirm('Bạn có chắc muốn xóa không?')">
          Delete
        </a>
      </td>
    </tr>
  <% }) %>
</table>

</body>
</html>
